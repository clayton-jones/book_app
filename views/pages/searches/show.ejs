<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../layout/head.ejs') %>
  <title>Document</title>
</head>
<body>
  <header>
    <!-- <div id="header-title">
      <h1>Best Books!</h1>
    </div> -->
    <%- include('../../layout/header.ejs')%>
  </header>

  <main>
    <div id='page-title'>
      <h2>Search Results</h2>
    </div>

    <% books.forEach(book => { %>
      <div class="book">
        <img src=<%= book.thumbnail %> alt="book">
        <h2>
          <%= book.title %>
        </h2>
        <p><%= book.author %></p>
        <p><%= book.description %></p>
        <%- include('../partials/edit.ejs', {book: book, edit: false}) %>
      </div>
    <%})%>  
  </main>

</body>
</html>